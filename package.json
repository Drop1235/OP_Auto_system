{
  "type": "module",
  "name": "tennis-tournament-board",
  "version": "1.1.0",
  "description": "Tennis Tournament Match Board Application with Password Protection",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "node build.js"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^8.1.0",
    "@supabase/supabase-js": "^2.39.5"
  },
  "build": {
    "appId": "com.tennis.tournamentboard",
    "productName": "Tennis Tournament Board",
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
